#!/bin/bash

RESET="\\033[0;0m"  # White on black

BLACK="\\033[0;30m"
BLUE="\\033[0;34m"
CYAN="\\033[0;36m"
GREEN="\\033[0;32m"
MAGENTA="\\033[0;35m"
RED="\\033[0;31m"
WHITE="\\033[0;37m"
YELLOW="\\033[0;33m"

BOLDBLACK="\\033[1;30m"
BOLDBLUE="\\033[1;34m"
BOLDCYAN="\\033[1;36m"
BOLDGREEN="\\033[1;32m"
BOLDMAGENTA="\\033[1;35m"
BOLDRED="\\033[1;31m"
BOLDWHITE="\\033[1;37m"
BOLDYELLOW="\\033[1;33m"

REVERSEBLACK="\\033[3;30m"
REVERSEBLUE="\\033[3;34m"
REVERSECYAN="\\033[3;36m"
REVERSEGREEN="\\033[3;32m"
REVERSEMAGENTA="\\033[3;35m"
REVERSERED="\\033[3;31m"
REVERSEWHITE="\\033[3;37m"
REVERSEYELLOW="\\033[3;33m"

UNDERLINEBLACK="\\033[4;30m"
UNDERLINEBLUE="\\033[4;34m"
UNDERLINECYAN="\\033[4;36m"
UNDERLINEGREEN="\\033[4;32m"
UNDERLINEMAGENTA="\\033[4;35m"
UNDERLINERED="\\033[4;31m"
UNDERLINEWHITE="\\033[4;37m"
UNDERLINEYELLOW="\\033[4;33m"

black()
{
        echo -e "${BLACK}${@}${RESET}"
}

blue()
{
        echo -e "${BLUE}${@}${RESET}"
}

cyan()
{
        echo -e "${CYAN}${@}${RESET}"
}

green()
{
        echo -e "${GREEN}${@}${RESET}"
}

magenta()
{
        echo -e "${MAGENTA}${@}${RESET}"
}

red()
{
        echo -e "${RED}${@}${RESET}"
}

white()
{
        echo -e "${WHITE}${@}${RESET}"
}

yellow()
{
        echo -e "${YELLOW}${@}${RESET}"
}

boldblack()
{
        echo -e "${BOLDBLACK}${@}${RESET}"
}

boldblue()
{
        echo -e "${BOLDBLUE}${@}${RESET}"
}

boldcyan()
{
        echo -e "${BOLDCYAN}${@}${RESET}"
}

boldgreen()
{
        echo -e "${BOLDGREEN}${@}${RESET}"
}

boldmagenta()
{
        echo -e "${BOLDMAGENTA}${@}${RESET}"
}

boldred()
{
        echo -e "${BOLDRED}${@}${RESET}"
}

boldwhite()
{
        echo -e "${BOLDWHITE}${@}${RESET}"
}

boldyellow()
{
        echo -e "${BOLDYELLOW}${@}${RESET}"
}

reverseblack()
{
        echo -e "${REVERSEBLACK}${@}${RESET}"
}

reverseblue()
{
        echo -e "${REVERSEBLUE}${@}${RESET}"
}

reversecyan()
{
        echo -e "${REVERSECYAN}${@}${RESET}"
}

reversegreen()
{
        echo -e "${REVERSEGREEN}${@}${RESET}"
}

reversemagenta()
{
        echo -e "${REVERSEMAGENTA}${@}${RESET}"
}

reversered()
{
        echo -e "${REVERSERED}${@}${RESET}"
}

reversewhite()
{
        echo -e "${REVERSEWHITE}${@}${RESET}"
}

reverseyellow()
{
        echo -e "${REVERSEYELLOW}${@}${RESET}"
}

underlineblack()
{
        echo -e "${UNDERLINEBLACK}${@}${RESET}"
}

underlineblue()
{
        echo -e "${UNDERLINEBLUE}${@}${RESET}"
}

underlinecyan()
{
        echo -e "${UNDERLINECYAN}${@}${RESET}"
}

underlinegreen()
{
        echo -e "${UNDERLINEGREEN}${@}${RESET}"
}

underlinemagenta()
{
        echo -e "${UNDERLINEMAGENTA}${@}${RESET}"
}

underlinered()
{
        echo -e "${UNDERLINERED}${@}${RESET}"
}

underlinewhite()
{
        echo -e "${UNDERLINEWHITE}${@}${RESET}"
}

underlineyellow()
{
        echo -e "${UNDERLINEYELLOW}${@}${RESET}"
}
